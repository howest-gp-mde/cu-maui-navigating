<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:Mde.Navigating.NavStack"
             x:Class="Mde.Navigating.NavStack.ActivityDetailPage">
    <ScrollView>
        <VerticalStackLayout
            Spacing="25"
            Padding="30,0"
            VerticalOptions="Start">

            <Image x:Name="imgActivity" Margin="0,30,0,15" WidthRequest="100" HeightRequest="100"></Image>

            <Label x:Name="txtName"
                   FontSize="Medium" 
                   HorizontalTextAlignment="Center" />

            <Label x:Name="txtDescription"
                   MaximumWidthRequest="500"
                   HorizontalTextAlignment="Start" />

            <local:RoutePartial />

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>